            });
        }
    }


    private async Task SaveWebhookSettings()
    {
        try
        {
            await using var db = await Factory.CreateDbContextAsync();
            var row = await db.WebhookControls.FirstOrDefaultAsync(x => x.Name == "EvolutionWebhook");

            if (row != null)
            {
                row.Enabled = webhookEnabled;
                row.UpdatedUtc = DateTime.UtcNow;
                await db.SaveChangesAsync();

                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    icon = "success",
                    title = "Configuración guardada",
                    text = $"El webhook ahora está {(webhookEnabled ? "activo" : "inactivo")}.",
                    timer = 2000,
                    showConfirmButton = false
                });
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "Error al guardar",
                text = ex.Message
            });
        }
    }

